
<div class="row member-details-header">
    <div class="col-xs-12 col-sm-2">
    </div>
    <div class="col-xs-12 col-sm-8 pull-right text-right">
        <button class="btn btn-primary member-add-button">Add New Member</button>
    </div>

    <div class="member-separator"></div>
</div>

<div class="table-responsive">
    <table id="membersTable" class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>Last Name</th>
                <th>First Name</th>
                <th>Language</th>
                <th>Other Name</th>
                <th>B/S</th>
                <th>Home Group</th>
                <th>Email</th>
                <th>Details</th>
            </tr>
        </thead>
        <tbody>
        {{#each members}}
            <tr>
                <td class="member-name-link">{{ last_name }}</td>
                <td class="member-name-link">{{ first_name }}</td>
                <td>{{ language }}</td>
                <td>{{ other_name }}</td>
                <td>{{ gender }}</td>
                <td>{{ home_group }}</td>
                <td>{{ email }}</td>
                <td class="member-id-link" data-id="{{ id }}">Details</td>
            </tr>
        {{/each}}
        </tbody>
    </table>
</div>

<div id="member-index-modal"></div>
