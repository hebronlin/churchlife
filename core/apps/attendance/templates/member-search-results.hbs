<div style="padding: 10px">
    <div class="member-edit-form-title">Members found:</div>
    <table id="membersTable" class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>Last Name</th>
                <th>First Name</th>
                <th>M/F</th>
                <th>Phone</th>
                <th>Year of Birth</th>
                <th>Home Group</th>
                <th>Add</th>
            </tr>
        </thead>
        <tbody>
        {{#each members}}
            <tr>
                <td class="member-name">{{ last_name }}</td>
                <td class="member-name">{{ first_name }}</td>
                <td>{{ gender }}</td>
                <td>{{ home_phone }}</td>
                <td>{{ year_of_birth }}</td>
                <td>{{ home_group }}</td>
                <td class='member-type'>
                    <label>Member</label><input data-id="{{ id }}" class="check member-check" type="checkbox" />
                    <label>Visitor</label><input data-id="{{ id }}" class="check visitor-check" type="checkbox" />
                </td>
            </tr>
        {{/each}}
        </tbody>
    </table>
</div>
